<!doctype html>
<html lang="en">
  <head>
  	<title>SkillGrader</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   <link rel="stylesheet" href="../css/style.css">
  </head>
  <body>
  
		<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar">
				<div class="custom-menu">
					<button type="button" id="sidebarCollapse" class="btn btn-primary">
	        </button>
        </div>
	  		<div class="img bg-wrap text-center py-4" style="background-image: url(../images/bg_1.jpg);">
	  			<div class="user-logo">
	  				<div class="img" style="background-image: url(../images/logo4.jpg);"></div>
	  				<h3><b><%=name%></b></h3>
	  			</div>
	  		</div>
        <ul class="list-unstyled components mb-5">
          <li>
            <a href="/stu_course"><span class="fa fa-home mr-3"></span> Home</a>
          </li>
          <li class="active">
            <a href="/user/mycourses"><span class="fa fa-book mr-3"></span>My Courses</a>
          </li>
          <li>
            <a href="/assignment"><span class="fa fa-upload mr-3"></span> Assignments </a>
          </li>
          <li>
            <a href="/progress"><span class="fa fa-trophy mr-3"></span> Progress </a>
          </li>
          <li>
            <a href="/logout"><span class="fa fa-sign-out mr-3"></span> Sign Out</a>
          </li>
        </ul>

    	</nav>

       
        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">
        <h1 class="btn btn-warning" style="width: 100%; font-size: xx-large;">Here are your Courses <%=name %>!!</h1> 
        <br><br>
        <% results.forEach(function(result){ %> 
          <div class="tp">
          <div class="card text-white bg-primary shadow p-3 mb-5  rounded" style="width: 100%;">
           
            <div class="card-body">
              <h5 class="card-title text-white"><%=result[0].course_name%></h5>
              <p class="card-text"><%=result[0].course_info%></p>
              <!-- <a href="#" class="btn btn-light " data-toggle="modal" data-target="#<%=result[0].course_teacher %>">Go to course</a> -->
              <form action="/unsubscribed" method="POST">
                <input type = "hidden" name = "unsubscribed_course_name" value = "<%=result[0].course_name %>" />
                <button type="submit" class="btn btn-light">Unsubscribe</button>
              </form>
            </div>
          </div>
          <div class="modal fade" id="<%= result[0].course_teacher%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle" name="course_name"><%=result[0].course_name%></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%=result[0].course_info%>
                  <%=result[0].course_teacher%>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <form action="/stu_course" method="POST">
                    <input type = "hidden" name = "subscribed_course_name" value = "<%=result[0].course_name %>" />
                    <button type="submit" class="btn btn-primary">Subscribe</button>
                  </form>
                </div>
              </div> 
            </div>  
          </div>
          
          </div>
          
          <% }) %>   
      </div>
    
    <script src="../js/jquery.min.js"></script>
    <script src="../js/popper.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>


