<!doctype html>
<html lang="en">
  <head>
  	<title>Photography</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
		
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="css/style.css">
  </head>
  <body>
		
    <div class="wrapper d-flex align-items-stretch">
      <nav id="sidebar">
        <div class="custom-menu">
          <button type="button" id="sidebarCollapse" class="btn btn-primary">
          </button>
        </div>
        <div class="img bg-wrap text-center py-4" style="background-image: url(images/bg_1.jpg);">
          <div class="user-logo">
            <div class="img" style="background-image: url(images/logo.jpg);"></div>
            <h3><%=name%></h3>
          </div>
        </div>
        <ul class="list-unstyled components mb-5">
          <li>
            <a href="/mycourses"><span class="fa fa-home mr-3"></span> Home</a>
          </li>
          <li>
            <a href="/upload"><span class="fa fa-upload mr-3"></span> Upload </a>
          </li>
          <li class="active">
            <a href="/submissions"><span class="fa fa-pencil mr-3"></span> Grade </a>
          </li>
          <li>
            <a href="/"><span class="fa fa-sign-out mr-3"></span> Sign Out</a>
          </li>
        </ul>
 
      </nav>

      <div id="content" class="p-4 p-md-5">

        <div id="content" class="p-4 p-md-5">
          <%results.forEach(function(result){%>
          <div class="card">
              <div class="card-header">
                Submission
              </div> 
              <div class="card-body" >
                Assignment name: <%=result.assignment_name%> <br>
                Student id: <%=result.stu_id%> <br>
                Student name: <%=result.stu_name%><br>
                
                 <% if(result.assignment_type == 'video/mp4'){%>
                    
                      <video width="250" height="250" controls>
                          <source src="../public/uploads/<%=result.assignment_desc%>" type="video/mp4">
                          <source src="../public/uploads/<%=result.assignment_desc%>" type="video/ogg">
                        Your browser does not support the video tag.
                      </video>
                  <%}%>
                  <% if(result.assignment_type == 'image/png'){%>
                     <a href="../public/uploads/<%=result.assignment_desc%>">Download </a>
                  <%}%>
                  <% if(result.assignment_type == 'image/jpeg'){%>
                    <a href="../public/uploads/<%=result.assignment_desc%>"> Download </a>
                   <%}%>
                  <% if(result.assignment_type == 'text/plain'){%>
                      <iframe src="../public/uploads/<%=result.assignment_desc%>"></iframe>
                  <%}%> 
                 <!-- <p class="card-text">Due Date:<%=result.due_date%></p>
                  <br>
                  <h4>Submission:</h4>-->
                  
                    <form action="/submissions" method="POST" >
                      <input type = "hidden" name = "assignment_name" value = "<%=result.assignment_name %>" />
                      <input type = "hidden" name = "stu_id" value = "<%=result.stu_id %>" />
  
                      <input type = "text" name = "grade" placeholder="Pending"/>
                      <button type="submit" class="btn btn-info">Grade</button>
                    </form>
                   
              </div>
            </div> <br> <br>
            <% })%>


      </div>


    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>